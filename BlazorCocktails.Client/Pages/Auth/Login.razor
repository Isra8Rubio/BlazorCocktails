@page "/login"
@using MudBlazor

<MudPaper Class="auth-page auth-page--paper" Elevation="0" Square="true">
    <MudCard Class="auth-card">
        <MudCardHeader Class="bg-gradient-auth">
            <MudText Typo="Typo.h5">Iniciar sesión</MudText>
        </MudCardHeader>

        <MudCardContent Class="p-6">
            <MudTextField T="string"
                          Label="Correo"
                          Placeholder="tucorreo@dominio.com"
                          InputType="InputType.Email"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Email"
                          Immediate="true" />

            <MudTextField T="string"
                          Class="mt-4"
                          Label="Contraseña"
                          Placeholder="••••••••"
                          InputType="InputType.Password"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Lock" />

            <MudStack Row="true" AlignItems="AlignItems.Center" Class="mt-3">
                <MudCheckBox T="bool" Label="Recordarme" Dense="true" />
                <MudSpacer />
                <MudLink Href="#" Class="text-sm opacity-80">¿Olvidaste la contraseña?</MudLink>
            </MudStack>

            <MudStack Row="true" Spacing="2" Class="mt-5">
                <MudButton Class="auth-btn" Variant="Variant.Filled">ENTRAR</MudButton>
                <MudButton Class="auth-btn-outline" Variant="Variant.Outlined" Href="/register">CREAR CUENTA</MudButton>
            </MudStack>

        </MudCardContent>
    </MudCard>
</MudPaper>
