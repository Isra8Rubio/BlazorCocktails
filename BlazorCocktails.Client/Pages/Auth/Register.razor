@page "/register"
@using MudBlazor
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<App> L

<PageTitle>@L["Register_Title"]</PageTitle>

<MudPaper Class="auth-page auth-page--paper" Elevation="0" Square="true">
    <MudCard Class="auth-card">
        <MudCardHeader Class="bg-gradient-auth">
            <MudText Typo="Typo.h5">@L["Register_Title"]</MudText>
        </MudCardHeader>

        <MudCardContent Class="p-6">
            <MudTextField T="string"
                          Label="@L["Register_EmailLabel"]"
                          Placeholder="@L["Register_EmailPlaceholder"]"
                          InputType="InputType.Email"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Email"
                          Immediate="true" />

            <MudTextField T="string"
                          Class="mt-4"
                          Label="@L["Register_PasswordLabel"]"
                          Placeholder="••••••••"
                          InputType="InputType.Password"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Lock" />

            <MudTextField T="string"
                          Class="mt-3"
                          Label="@L["Register_ConfirmLabel"]"
                          Placeholder="••••••••"
                          InputType="InputType.Password"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Lock" />

            <MudStack Row="true" Spacing="2" Class="mt-4">
                <MudButton Class="auth-btn" Variant="Variant.Filled">@L["Register_Submit"]</MudButton>
                <MudButton Class="auth-btn-outline" Variant="Variant.Outlined" Href="/login">@L["Register_GoLogin"]</MudButton>
            </MudStack>
        </MudCardContent>
    </MudCard>
</MudPaper>
